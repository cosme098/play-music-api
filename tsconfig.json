{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "rootDir": "./",
      "baseUrl": "./src",
      "outDir": "dist",
      "resolveJsonModule": true,

    },
    "lib": ["es2015"],
    "paths": {
      "@modules/*": ["modules/*"],
      "@core/*": ["core/*"],
      "@infra/*": ["infra/*"],
      "@shared/*": ["shared/*"],
    }
  }